{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "automerge": true,
    "automergeType": "pr",
    "enabled": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "automerge": true,
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "rangeStrategy": "bump"
}
